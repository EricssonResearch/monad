<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".activities.ForgotPasswordPopup"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:layout_centerInParent="true"
    android:layout_centerVertical="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:padding="@dimen/layout_padding"
    android:theme="@style/ToolbarTheme"
    android:background="@color/primaryColor"
    android:id="@+id/popup_forgotpassword"
    >

    <TextView
        android:id="@+id/label_enteremail"
        style="@style/Base.TextAppearance.AppCompat.Widget.ActionBar.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_forgotpassword_enteremail"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        />

    <TextView
        android:id="@+id/label_email"
        style="@style/Base.TextAppearance.AppCompat.Widget.ActionBar.Subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/label_enteremail"
        android:text="@string/label_forgotpassword_email"
        />
    <EditText
        android:id="@+id/field_email"
        style="@style/Base.TextAppearance.AppCompat.Large.Inverse"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/label_email"
        android:inputType="textEmailAddress"
        android:hint="@string/label_forgotpassword_emailhint"
        />

    <Button
        android:id="@+id/button_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_trip_button_confirm"
        android:textAllCaps="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        />

</RelativeLayout>


